# AAF Backend Dockerfile for Deployment
# This Dockerfile is designed to be run from the LangSwarm project root

FROM python:3.11-slim as base

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PORT=8080

# Install system dependencies including libmagic for python-magic
RUN apt-get update && apt-get install -y \
    curl \
    git \
    libmagic1 \
    libmagic-dev \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Install LangSwarm from local source first
COPY . /tmp/langswarm-src
RUN cd /tmp/langswarm-src && pip install -e .

# Copy AAF requirements
COPY external/aaf/requirements.txt .

# Install AAF dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy AAF application code
COPY external/aaf/ .

# Create necessary directories
RUN mkdir -p /app/config /app/credentials

# Create non-root user
RUN useradd --create-home --shell /bin/bash app \
    && chown -R app:app /app
USER app

# Expose port
EXPOSE $PORT

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:$PORT/health || exit 1

# Run the application
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8080"]
