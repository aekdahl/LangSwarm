# AAF Backend Environment Variables
# Copy this file to .env and fill in your values

# LangSwarm Configuration
LANGSWARM_CONFIG_PATH=/app/config/langswarm.yaml
LOG_LEVEL=INFO

# Google Cloud Configuration (BigQuery Memory Storage)
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
BIGQUERY_DATASET_ID=aaf_chatbot_memory
BIGQUERY_TABLE_ID=conversations

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Session Configuration
SESSION_BACKEND=memory  # Options: memory, bigquery
SESSION_TTL=3600  # Session timeout in seconds

# Custom Tools Configuration
# Web Scraper Tool (Remote MCP - crawl4ai)
CRAWL4AI_MCP_URL=https://your-crawl4ai-mcp-server.com
CRAWL4AI_API_KEY=your-crawl4ai-api-key

# Vector Search RAG Tool (Local MCP with BigQuery)
EMBEDDING_MODEL=text-embedding-3-small  # OpenAI embedding model

# FastAPI Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=false

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Security
SECRET_KEY=your-secret-key-for-jwt-tokens

# Cloud Run Configuration
PORT=8080

# WebSocket Configuration
WEBSOCKET_CORS_ORIGINS=["*"]

# Management API Configuration
MANAGEMENT_API_ENABLED=true
MANAGEMENT_API_SECRET=your-management-api-secret-key

# Agent Configuration
DEFAULT_AGENT_MODEL=gpt-4
DEFAULT_AGENT_BEHAVIOR=helpful
DEFAULT_SYSTEM_PROMPT="You are a helpful AI assistant for customer support. Be professional, concise, and helpful."

# Memory Configuration
MEMORY_ENABLED=true
MEMORY_BACKEND=bigquery
MEMORY_AUTO_STORE=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10
